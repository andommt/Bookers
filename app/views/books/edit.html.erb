<h1>編集画面</h1>

<% if @list.errors.any? %>
 <%= @list.errors.count %>件のerrorが発生しました
  <% @list.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  
<% end %>

<%= form_with model:@list, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
 <br> <%= f.submit 'Update Book' %></br>
<% end %>
<%= link_to "Show", book_path(@list.id) %>
<%= link_to "back", books_path %>
